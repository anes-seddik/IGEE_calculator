<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LO1"
    android:background="@drawable/noxgrey">
    <TextView
        android:id="@+id/S1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Semester 1"
        android:textAlignment="center"
        android:textSize="35sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        />

    <LinearLayout
        android:id="@+id/S1layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/S1"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape1"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="25dp"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Semester 1 Grade:"
            android:lines="1"
            android:textAlignment="textStart"
            android:textSize="22sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"

            android:layout_gravity="center_vertical"
            tools:ignore="RtlCompat"
            android:paddingStart="10dp"/>
        <TextView
            android:id="@+id/S1Grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text=""
            android:lines="1"
            android:textAlignment="center"
            android:textSize="25sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:layout_weight="7"
            android:layout_gravity="center_vertical"
            tools:ignore="RtlCompat"
            android:paddingHorizontal="7dp"

            />
        <ImageView
            android:id="@+id/clac1"
            android:padding="3dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/calc"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:onClick="gotoL01S1"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/S2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/S1layout"
        android:text="Semester 2"
        android:textAlignment="center"
        android:textSize="35sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        />

    <LinearLayout
        android:id="@+id/S2layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/S2"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape1"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="25dp"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Semester 2 Grade:"
            android:lines="1"
            android:textAlignment="textStart"
            android:textSize="22sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"

            android:layout_gravity="center_vertical"
            tools:ignore="RtlCompat"
            android:paddingStart="10dp"/>
        <TextView
            android:id="@+id/S2Grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text=""
            android:lines="1"
            android:textAlignment="center"
            android:textSize="25sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:layout_weight="7"
            android:layout_gravity="center_vertical"
            tools:ignore="RtlCompat"
            android:paddingHorizontal="7dp"

            />
        <ImageView
            android:id="@+id/clac2"
            android:padding="3dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/calc"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:onClick="gotoL01S2"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/S2layout"
        android:text="Year Average"
        android:textAlignment="center"
        android:textSize="35sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:layout_marginTop="100dp"
        />
    <TextView
        android:id="@+id/yearGrade"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/year"
        android:text=""
        android:textAlignment="center"
        android:textSize="30sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape1"
        android:paddingHorizontal="50dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>